<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/firstLinearColored"
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/redView"
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:text="red"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:background="#9B1515"/>


        <TextView
            android:id="@+id/greenView"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="green"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:background="#159B22"/>

        <TextView
            android:id="@+id/blueView"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="blue"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:background="#15519B"/>

        <TextView
            android:id="@+id/yellowView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="yellow"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:background="#FDD835"/>
    </LinearLayout>

    <TextView
        android:id="@+id/row_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="row one "
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/row_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="row two"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/row_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="row three "
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/row_four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="row four "
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/row_five"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="row five "
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/nextTask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Got To Task2 >>>"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:background="@color/white"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#7CB342"/>
</LinearLayout>